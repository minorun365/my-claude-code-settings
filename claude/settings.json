{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Glob",
      "Grep",
      "LSP",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(find:*)",
      "Bash(which:*)",
      "Bash(pwd:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(echo:*)",
      "Bash(gh:*)",
      "Bash(aws:*)",
      "Bash(QUERY_ID=*)",
      "Bash(sleep *)",
      "Bash(while *)",
      "Bash(export QUERY_ID=*)",
      "Bash(*aws logs*)",
      "Bash(*aws cloudwatch*)",
      "Bash(jq:*)",
      "Bash(*| jq*)",
      "Bash(*| grep*)",
      "Bash(*| head*)",
      "Bash(*| tail*)",
      "mcp__context7__*",
      "mcp__strands__*",
      "mcp__bedrock-agentcore-mcp-server__*",
      "mcp__github__get_*",
      "mcp__github__list_*",
      "mcp__github__search_*",
      "mcp__chrome-devtools__*",
      "mcp__playwright__*",
      "mcp__aws-mcp__aws___read_documentation",
      "mcp__aws-mcp__aws___search_documentation",
      "mcp__aws-mcp__aws___get_regional_availability",
      "mcp__aws-mcp__aws___list_regions",
      "mcp__aws-mcp__aws___recommend",
      "mcp__aws-mcp__aws___retrieve_agent_sop",
      "mcp__aws-iac-mcp-server__search_cdk_documentation",
      "mcp__aws-iac-mcp-server__search_cloudformation_documentation",
      "mcp__aws-iac-mcp-server__search_cdk_samples_and_constructs",
      "mcp__aws-iac-mcp-server__read_iac_documentation_page",
      "mcp__aws-iac-mcp-server__cdk_best_practices",
      "mcp__awslabs-cloudwatch-mcp-server__*",
      "Bash(python3 -c*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "language": "日本語（明るく元気、絵文字あり）",
  "autoUpdatesChannel": "latest",
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "モゾモゾ",
      "ざわ…ざわ",
      "もじもじ",
      "うねうね",
      "ピロピロピロ",
      "うにょにょーん",
      "ぱやぱや",
      "はわわわ"
    ]
  }
}
